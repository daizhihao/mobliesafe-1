<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hysy="http://schemas.android.com/apk/com.daizhihao.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />
    <com.daizhihao.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        hysy:desc_off="自动更新已关闭"
        hysy:desc_on="自动更新已开启"
        hysy:tv_title="自动更新设置">
    </com.daizhihao.mobilesafe.view.SettingItemView>

    <com.daizhihao.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        hysy:desc_off="归属地显示已经关闭"
        hysy:desc_on="归属地显示已经开启"
        hysy:tv_title="电话归属地显示设置">
    </com.daizhihao.mobilesafe.view.SettingItemView>

    <com.daizhihao.mobilesafe.view.SettingClickView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scv_address_style">
    </com.daizhihao.mobilesafe.view.SettingClickView>
    <com.daizhihao.mobilesafe.view.SettingClickView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scv_address_location">
    </com.daizhihao.mobilesafe.view.SettingClickView>
    <com.daizhihao.mobilesafe.view.SettingItemView
        android:id="@+id/siv_callsafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        hysy:desc_off="黑名单更新已经关闭"
        hysy:desc_on="黑名单更新已经开启"
        hysy:tv_title="黑名单更新设置">
    </com.daizhihao.mobilesafe.view.SettingItemView>
</LinearLayout>